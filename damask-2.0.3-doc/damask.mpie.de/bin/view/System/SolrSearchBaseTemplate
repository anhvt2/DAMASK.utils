  &#34;not &#39;&#37;exclusion&#37;&#39;&#61;~&#39;^(&#91;&#37;&#93;exclusion&#37;)?&#36;&#39;&#34;
  then&#61;&#34; data-exclusion&#61;&#39;&#37;exclusion&#37;&#39;&#34;
