&#60;script type&#61;&#39;text/javascript&#39; src&#61;&#39;&#37;PUBURLPATH&#37;/&#37;SYSTEMWEB&#37;/SolrPlugin/ajax-solr-widgets.js&#39;&#62;&#60;/script&#62;
